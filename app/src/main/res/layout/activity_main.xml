<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*">

    <TableRow
        android:id="@+id/Visualizer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="55">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/black"
            android:textSize="90dp" />
    </TableRow>

    <TableRow android:id="@+id/fila1"
        android:layout_weight="25"
        android:layout_width="match_parent">

        <Button android:id="@+id/btn1"
            android:text="1"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="0"
            />

        <Button android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="15dp"
            style="@style/TableLayoutStyle"
            android:layout_column="1"
            />

        <Button android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="15dp"
            style="@style/TableLayoutStyle"
            android:layout_column="2"
            />

        <Button android:id="@+id/btnDiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="15dp"
            style="@style/TableLayoutStyle"
            android:layout_column="3"/>

        <Button android:id="@+id/btnDel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DEL"
            android:textSize="15dp"
            style="@style/TableLayoutStyle"
            android:layout_column="4"
            />

    </TableRow>
    <TableRow android:id="@+id/fila2"
        android:layout_weight="25"
        android:layout_height="match_parent">
        <Button android:id="@+id/btn4"
            android:text="4"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="0"/>
        <Button android:id="@+id/btn5"
            android:text="5"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="1"
            />
        <Button android:id="@+id/btn6"
            android:text="6"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="2"
            />
        <Button android:id="@+id/btnMulti"
            android:text="x"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="3"
            />
        <Button android:id="@+id/btnNull"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="4"
            />
    </TableRow>
    <TableRow android:id="@+id/fila3"
        android:layout_weight="25">
        <Button android:id="@+id/btn7"
            android:text="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="0"
            />
        <Button android:id="@+id/btn8"
            android:text="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="1"
            />
        <Button android:id="@+id/btn9"
            android:text="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="2"
            />
        <Button android:id="@+id/btnMenos"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="3"
            />
        <Button android:id="@+id/btnNull2"
            android:text="="
            android:layout_gravity=""
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="4"
            />
    </TableRow>
    <TableRow android:id="@+id/fila4"
        android:layout_weight="25">
        <Button android:id="@+id/btn0"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="0"
            />
        <Button android:id="@+id/btnComa"
            android:text=","
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="1"
            />
        <Button android:id="@+id/btnIgual"
            android:text="="
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableLayoutStyle"
            android:layout_column="2"
            android:layout_span="3"
            />

    </TableRow>

</TableLayout>