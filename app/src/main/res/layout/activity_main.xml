<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:layout_weightSum="100"
    >

    <TableRow android:layout_width="match_parent"
        android:layout_weight="25">

        <Button android:id="@+id/btn1"
            android:text="1"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            style="@style/TableLayoutStyle"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="15dp"
            style="@style/TableLayoutStyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="15dp"
            style="@style/TableLayoutStyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="15dp"
            style="@style/TableLayoutStyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DEL"
            android:textSize="15dp"
            style="@style/TableLayoutStyle"/>

    </TableRow>
    <TableRow android:layout_weight="25"
        android:layout_height="match_parent">
        <Button android:text="4" android:textSize="15dp" android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:text="5" android:textSize="15dp" android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:text="6" android:textSize="15dp" android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:text="x" android:textSize="15dp" android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>

        <Button android:layout_column="0" android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
    </TableRow>
    <TableRow android:layout_weight="25">
        <Button android:text="7" android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:text="8" android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:text="9" android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:text="-" android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:text="=" android:layout_gravity="" android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
    </TableRow>
    <TableRow android:layout_weight="25">
        <Button android:text="0"  android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:text=","  android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:text="+"  android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/TableLayoutStyle"/>


    </TableRow>

</TableLayout>